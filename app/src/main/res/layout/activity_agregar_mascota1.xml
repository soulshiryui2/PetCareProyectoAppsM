<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="40dp"
    android:background="@drawable/ic_background"
    tools:context=".AgregarMascota1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Mascota"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_marginTop="45dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar foto de tu Mascota"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="25sp"
        />


    <Button
        android:id="@+id/btn_iniciarSesion"
        android:layout_width="300dp"
        android:onClick="abrirLogin"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:backgroundTint="@color/botong"
        android:text="Siguiente"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btn_registro"
        android:onClick="abrirRegistro"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:backgroundTint="@color/botong"
        android:text="Regresar"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
</LinearLayout>